datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appliers {
  userId Int      @id
  /// @DtoRelationRequired
  movie  Movies[]
}

model Movies {
  id       String     @id @default(uuid())
  title    String
  released String
  genre    String
  director String
  /// @DtoRelationRequired
  applier  Appliers[]
}

